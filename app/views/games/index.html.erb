<h1>Listing Games</h1>

<script src="//maps.google.com/maps/api/js?key=AIzaSyB2ZjOdJfcfbL4c1opv9oWAEs_OAKbVNW4"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

 
<table id="meets_list">
  <tr>
    <th>Title</th>
    <th>Sport</th>
    <th>Location</th>
    <th>Time</th>
    <th>Min</th>
    <th>Max</th>
    <th>Signed Up</th>
    <th>Details</th>
  </tr>
 
  <% @games.each do |game| %>
    <tr class='meet'>
      <td><%= game.title %></td>
      <td><%= game.sport%></td>
      <td><%= game.location%></td>
      <td><%= game.time%></td>
      <td><%= game.min%></td>
      <td><%= game.max%></td>
      <td><%= game.sign_ups%></td>
      <td><%= game.details%></td>
      <td><%= link_to 'More Info', games_meet_details_path, :id => 'More Info' %></td>
      <% if game.sign_ups <  game.max %>      
          <td><%= link_to 'Sign Up', edit_game_path(game) %></td>
      <% end %>
    </tr>
  <% end %>
  <%= link_to 'More Info', games_meet_details_path, :id => 'More Info' %>
</table>




<div id="map" style='width: 800px; height: 400px;'></div>
</div>
>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  google.maps.event.addDomListener(window, 'page:load', initialize);
});
</script>